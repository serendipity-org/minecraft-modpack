{
  "name": "serendipity-modpack",
  "module": "pack.toml",
  "scripts": {
    "add": "./bin/packwiz-linux modrinth install",
    "add:cf": "./bin/packwiz-linux curseforge install",
    "dev": "bun refresh && ./bin/packwiz-linux serve",
    "refresh": "./bin/packwiz-linux refresh",
    "rm": "./bin/packwiz-linux remove",
    "up": "./bin/packwiz-linux update",
    "up:all": "./bin/packwiz-linux update --all",
    "settings": "./bin/packwiz-linux settings"
  }
}